<% if @errors %>
  <span>Something went wrong:</span>
  <ul class="error-list pad-b-2">
    <% @errors.each do |error| %>
      <li class="error-item"><%= error %></li>
    <% end %>
  </ul>
<% end %>

<h1 class="edit-header">Edit your comment</h1>
<form class="edit-forms" action="/questions/<%= @question.id %>/comments/<%= @comment.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <textarea rows="6" columns="200" class="edit-text" name="new_comment"><%= @comment.comment %></textarea><br>
  <input type="submit" value="Update your comment">
</form>
