
  <% if @errors %>
  <% @errors.each do |error| %>
  <div><%= error.full_message %></div>
  <% end %>
  <% end %>

<h2 id="homepageheader">All Questions</h2>
  <header>
    <ul class="tabs">
      <li class="active"><a class="question-link" href="/questionstab">questions</a></li>
      <li><a class="question-link" href="/newest">newest</a></li>
      <li><a class="question-link" href="/comments">comments</a></li>
      <li><a class="question-link" href="/popular">popular</a></li>
      <% if logged_in? %>
      <li><a href="#question-form">Ask Question</a></li>
      <% else %>
      <li><a href="/sessions/login">Ask Question</a></li>
      <% end %>
    </ul>
  </header>
  <br><br><br><br><br>
<container id="partial-container">
<%= erb(:question_list_partial, :locals => { :questions => @questions })%>
</container>

<% if logged_in? %>
  <div id="question-form">
    <form id="question" method="post" action="/">
      <table>
        <tr><td>Title:</td></tr>
        <tr><td><input type="text" name="title" placeholder="title"/></td></tr>
        <tr><td>Body:</td></tr>
        <tr><td><textarea rows="7" cols="50" name="question" placeholder="Enter your description..."></textarea></td></tr>
        <tr><td><input type="submit" value="Submit Question!"/></td></tr>
      </table>
    </form>
  </div>
<% end %>
